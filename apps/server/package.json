{
  "name": "@medea/server",
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon",
    "build": "rm -rf dist && node ./scripts/build",
    "serve": "node dist/main.js",
    "lint": "eslint --fix src/**",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "db-up": "docker compose up",
    "db-down": "docker compose down",
    "db:migrate": "prisma migrate dev --preview-feature --skip-generate --name",
    "db:generate": "pnpm dlx prisma generate",
    "studio": "pnpm dlx prisma studio",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "3.3.0",
    "fastify": "3.29.2",
    "fastify-cors": "6.1.0",
    "fastify-error": "0.3.1",
    "fastify-healthcheck": "3.2.0",
    "fastify-plugin": "3.0.1",
    "fastify-swagger": "4.17.1",
    "pino-pretty": "^7.0.1"
  },
  "devDependencies": {
    "@medea/models": "workspace:*",
    "@types/node": "^16.9.2",
    "@types/pino": "^6.3.11",
    "esbuild": "^0.13.0",
    "esbuild-node-externals": "^1.3.0",
    "nodemon": "^2.0.12",
    "prisma": "3.3.0"
  }
}
